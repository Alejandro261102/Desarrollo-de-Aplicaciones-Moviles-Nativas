<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Modo Oscuro"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tv_world_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🌍 Elige tu Camino"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/tv_world_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_world_title"
        android:text="El destino del reino está en tus manos. Dos sendas se abren ante ti, cada una con sus propios peligros y recompensas. ¿Qué camino tomarás?"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_to_forest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adentrarse en el Bosque Sombrío"/>

        <Button
            android:id="@+id/btn_to_mountains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Escalar las Montañas de Cristal"/>
    </LinearLayout>

</RelativeLayout>