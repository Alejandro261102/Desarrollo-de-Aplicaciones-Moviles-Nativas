<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ending_background" android:padding="24dp">
    <TextView
        android:id="@+id/tv_ending_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del Final"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tv_ending_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ending_title"
        android:layout_marginTop="24dp"
        android:text="Aquí va la descripción de lo que sucedió al final de tu aventura."
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_centerInParent="true"/>

    <include layout="@layout/restart_button" />

</RelativeLayout>